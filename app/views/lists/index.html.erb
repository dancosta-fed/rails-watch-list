<div class="wrapper">

  <div class="banner">
    <div class="banner-content container">
    <h1 class="main-title">Make your own Movie List</h1>
    </div>
  </div>

  <div class="container py-5">
    <div class="d-flex align-items-center justify-content-between mb-3">
      <h1 class="mb-0">Movie Lists</h1>
      <%= link_to 'Add New', new_list_path, class: "btn btn-success mt-3" %>
    </div>

      <div class="row my-2">
        <% @lists.each do |list| %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4" data-aos="zoom-in">
            <div class="bg-white rounded shadow h-30">
          <%= link_to list_path(list), class: "text-decoration-none" do %>
            <div class="card-category text-center">
              <div class="card-category" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path("https://res.cloudinary.com/dognkye6x/image/upload/v1645840712/freddy_i1qye8.jpg") %>)">
              <%= list.name %>
              </div>
            </div>
          <% end %>
            </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="footer">
  <div class="footer-links">
    <a href="https://github.com/dancosta-fed"><i class="fab fa-github"></i></a>
    <a href="https://www.instagram.com/_dancosta_/"><i class="fab fa-instagram"></i></a>
    <a href="https://www.linkedin.com/in/daniel-de-oliveira-costa-590515140/"><i class="fab fa-linkedin"></i></a>
  </div>
  <div class="footer-copyright">
    Created by &copy Dan Costa
  </div>
</div>
</div>


